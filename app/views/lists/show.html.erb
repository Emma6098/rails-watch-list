<div class="container">
  <h2 class="col-sm-8 col-sm-offset-2 mx-auto border-bottom pb-3 pt-4"><%= @list.name%></h2>
  <%# <p class="row col-sm-8 col-sm-offset-2 mx-auto pt-3"><%= @list.movies%></p>
  <%= link_to 'Add a movie', new_list_path(@list)%>
</div>


<div class="container">
  <div class="card-show-title">
    <h1>Movies</h1>
  </div>
    <div class="row cards-movie">
      <% @movies.each do |movie| %>
        <div class="col-6 col-6-sm">
          <div class="card-movie">
            <%= image_tag movie.poster_url, alt: "Affiche de film" %>
          <div class="card-description">
            <div class="card-title">
              <h5><%=movie.title %></h5>
              <p> <%=movie.rating %> ⭐️</p>
            </div>
            <br>
            <div class="card-overview">
              <p> <%=movie.overview %> </p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
  </div>
